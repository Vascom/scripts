#!/bin/bash

if [ -z "$1" -o -z "$2" ]
then
    echo "Format isn't correct!"
    echo "Use koji_run project_name commit_number dist_number"
    echo "If dist_number not entered then using 15"
    exit
fi

if [[ -z "$3" || $3 == 0 ]]
then
    DIST_NUMBER=15
else
    DIST_NUMBER=$3
fi

koji build dist-rfr$DIST_NUMBER git://github.com/RussianFedora/$1.git?#$2

